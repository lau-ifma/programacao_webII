<form method="post" action="/pessoa/salvar" >
    <fieldset>

        {{!-- <legend>Dados do Cliente</legend> --}}

          
                <label for="cpf" class="form-label">CPF</label>
                <input data-mask = "000.000.000-00" type="text" name="cpf" id="cpf" class="form-control" placeholder="000.000.000-00" required>
          
