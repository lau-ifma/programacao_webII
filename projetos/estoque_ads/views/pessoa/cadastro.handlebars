                <input data-mask="(00) 00000-0000" type="text" id="telefone" name="telefone" class="form-control" placeholder="(99) 99999-9999" required>
        
          
                <label for="email"  class="form-label">E-MAIL</label>
                <input type="text" id="email" name="email" class="form-control" placeholder="seu_email@gmail.com" required>
           
